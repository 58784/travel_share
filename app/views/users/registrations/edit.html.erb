<% content_for(:title, 'プロフィール') %>
  <div class="text-center">
    <h2 class="m-5">プロフィール</h2>
  
  <%= form_with(model: @user, url: registration_path(resource_name), html: { method: :put }, data: { turbo: false }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  
    <div class="field mb-3">
      <%= f.label :email, class:"pe-5 me-3" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    
    <div class="field mb-3">
      <%= f.label :current_password, class:"me-5" %><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>
  
    <div class="field mb-3">
      <%= f.label :password, class:"pe-5 me-5" %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  
    <div class="field mb-3">
      <%= f.label :password_confirmation, class:"me-5" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    
    <span class="image">
      <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
    </span>
  
     <% if @user.image.attached? %>
      <%= image_tag @user.image.variant(:display),  class: "rounded-circle", size: "200x200" %>
     <% end %>
  
    <div class="actions">
      <%= f.submit "更新", class:"btn btn-outline-secondary mb-5" %>
    </div>
  <% end %>
  
  <%= button_to "アカウントを削除する", registration_path(resource_name),{ method: :delete, form: { data: { turbo_confirm: "本当に削除しますか？" } } }%>
        
  
  <%= link_to "戻る", :back, class:"btn btn-dark mt-5" %>
</div>

