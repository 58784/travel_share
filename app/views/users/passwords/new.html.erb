<% content_for(:title, 'パスワードリセット') %>
<div class="text-center">
    <h2 class="m-5">パスワードリセット</h2>
    <%= form_with(model: @user, url: password_path(resource_name), html: { method: :post }, data: { turbo: false }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
        <div class="container">
          <div class="row">
            <div class="d-flex justify-content-center align-items-end mb-3">
              <div class="text-start">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col" %>
              </div>
              <div>
              <%= f.submit "送信", class:"ms-1 btn btn-outline-secondary btn-sm col" %>
              </div>
            </div>
          </div>
        </div>
    <% end %>
    
    <%= render "users/shared/links" %>
</div>
