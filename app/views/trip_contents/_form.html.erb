<div class="d-flex justify-content-center">
  <%= form_with(model: [Trip.find(params[:trip_id]), trip_content]) do |form| %>
    <% if trip_content.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(trip_content.errors.count, "点のエラー") %> により保存できませんでした</h2>
        <ul>
          <% trip_content.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div>
      <%= form.datetime_field :timestamp, class:"input_trip_contents_datetime_field border rounded-3 bg-light" %>
    </div>
    <div>
      <%= form.text_area :content, class:"form_input_trip_contents_text_area border rounded-3" %>
    </div>
    <div class="float-start">
      <%= form.submit "保存する", class:"mt-3 btn btn-success" %>
    </div>
  <% end %>
</div>  