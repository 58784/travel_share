<!DOCTYPE html>
<html>
  <head>
    <title><%= page_title(yield(:title)) %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <script src="https://kit.fontawesome.com/b4c6f6c944.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <% shared = current_page?('/shared_trip') %>
    <header>
      <% if !shared %>
        <% if user_signed_in?%>
          <%= render "shared/logged_in_header"%>
          
        <%else%>
          <%= render "shared/not_logged_in_header"%>
        <%end%>
      <% end %>
    </header>
    
    <%= render 'layouts/flashes' %>
    <%= yield %>
  </body>
</html>