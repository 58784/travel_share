<%= form_with(model: trip) do |form| %>

  <% if trip.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(trip.errors.count, "エラー") %> により、保存できませんでした</h2>

      <ul>
        <% trip.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="d-flex justify-content-center">
  <div class="text-center">
    <div class="mb-3">
      <%= form.label "旅行名",style: "display: block", class:"text-start" %>
      <%= form.text_area :name_of_trip, value:"食いだおれ旅行" %>
    </div>
    
    <div class="mb-3">
      <%= form.label "行き先", style: "display: block", class:"text-start" %>
      <%= form.select :name, Trip.trip_types.to_a, { include_blank: '選択してください'}, class:"trip_new_form" %>
    </div>
    
    <div class="mb-3">
      <%= form.label "何日間", style: "display: block", class:"text-start" %>
      <%= form.number_field :day, min: 1, max: 3, :value => 1, class:"trip_new_form"%>
    </div>
    
    <div class="mb-5">
      <%= form.label "旅行開始日", style: "display: block", class:"text-start" %>
      <%= form.date_field :when, class:"trip_new_form"%>
    </div>
  </div>
</div>
  <div>
    <%= form.submit "+ 旅程を立てる", class:"btn btn-outline-success me-2" %>
  </div>
<% end %>
